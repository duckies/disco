{
  "name": "@repo/bot",
  "private": true,
  "module": "./src/bot.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch ./src/bot.ts",
    "build": "bun build --compile --minify --sourcemap --target=bun-linux-x64-baseline ./src/bot.ts --outfile ./dist/bot",
    "start": "./dist/bot",
    "sync": "bun ./src/scripts/sync.ts",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/disco": "workspace:*",
    "discord.js": "^14.15.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "20.11.1",
    "tsx": "^4.11.2",
    "typescript": "^5.5.3"
  }
}
